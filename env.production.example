# Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# LiveKit Server Configuration
# ============================================
# Generate these using: openssl rand -hex 16
LIVEKIT_API_KEY=your-generated-api-key-here
LIVEKIT_API_SECRET=your-generated-api-secret-here

# LiveKit Server URLs
# WebSocket URL (for client connections)
LIVEKIT_URL=wss://livekit.yourdomain.com
# HTTP URL (for server API calls)
LIVEKIT_HTTP_URL=https://livekit.yourdomain.com

# ============================================
# Cloudflare R2 Configuration
# ============================================
# Get these from your Cloudflare R2 dashboard
R2_ACCESS_KEY=your-r2-access-key-id
R2_SECRET_KEY=your-r2-secret-access-key
R2_BUCKET=your-r2-bucket-name
# R2 Endpoint URL (format: https://<account-id>.r2.cloudflarestorage.com)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=production

# Webhook secret for LiveKit webhook authentication
# Generate a random secret: openssl rand -hex 16
WEBHOOK_SECRET=your-webhook-secret-here

# ============================================
# Optional: Database Configuration
# ============================================
# If you want to use a real database instead of in-memory storage:
# DATABASE_URL=postgresql://user:password@localhost:5432/livekit_sessions
# Or for MongoDB:
# MONGODB_URI=mongodb://localhost:27017/livekit_sessions

